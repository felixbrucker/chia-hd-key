{
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "./dist",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitOverride": true,
        "isolatedModules": true,
        "importsNotUsedAsValues": "remove"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
